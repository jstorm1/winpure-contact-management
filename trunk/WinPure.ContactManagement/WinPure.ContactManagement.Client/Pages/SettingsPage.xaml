<CommonControls:PageControl
                            xmlns:CommonControls="clr-namespace:WinPure.ContactManagement.Client.CommonControls;assembly=WinPure.ContactManagement.Client.CommonControls" 
                            xmlns:Settings="clr-namespace:WinPure.ContactManagement.Client.ViewModels.Settings;assembly=WinPure.ContactManagement.Client.ViewModels" 
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:Transitionals.Controls;assembly=Transitionals" xmlns:WinPure_ContactManagement_Client_Helpers_Converters="clr-namespace:WinPure.ContactManagement.Client.Helpers.Converters" x:Class="WinPure.ContactManagement.Client.Pages.SettingsPage"
                            mc:Ignorable="d" 
                            d:DesignHeight="483" 
                            d:DesignWidth="777" 
                            BorderColor="#FF373737" 
                            Text="Settings">

    <!--Page Resources-->
    <CommonControls:PageControl.Resources>
        
    	<WinPure_ContactManagement_Client_Helpers_Converters:ContentSwicherConverter x:Key="ContentSwicherConverter"/>
        
        <!--Transitions List Data Template-->
        <DataTemplate x:Key="TransitionsListDataTemplate">
            <Grid d:DesignWidth="282" d:DesignHeight="56">
                <TextBlock Height="20" TextWrapping="Wrap" Text="{Binding Name, Mode=OneWay}" VerticalAlignment="Center" 
                           Margin="8" FontSize="16" FontFamily="Century Gothic" Foreground="White"/>
            </Grid>
        </DataTemplate>
    </CommonControls:PageControl.Resources>

    <!--Page Background-->
    <CommonControls:PageControl.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFD93737"/>
            <GradientStop Color="#FF4C1313" Offset="1"/>
        </LinearGradientBrush>
    </CommonControls:PageControl.Background>

    <Grid x:Name="LayoutRoot" Background="#00000000">
        
        <!--Page Gradient Overlay-->
        <Grid x:Name="PageGradientOverlay" Background="{DynamicResource PageBackgroundGradient}"/>
        
        <TabControl x:Name="SettingsTabControl" FontSize="16" TabStripPlacement="Left" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0">
            
            <!--View Tab-->
            <TabItem x:Name="ViewTabItem" Header="View" Style="{DynamicResource TabItemStyle}" Margin="0" 
                     Height="40" Width="200" FontSize="21.333" Foreground="White">
                
                <TabItem.DataContext>
                    <Settings:ViewTabViewModel/>
                </TabItem.DataContext>
                
                <Grid x:Name="ViewTabGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Offset="0"/>
                            <GradientStop Color="#12FFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    
                    <!--Transitions-->
                    <Grid x:Name="TrasitionsGrid" Margin="8,0,0,95.703">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.124*"/>
                            <RowDefinition Height="0.876*"/>
                        </Grid.RowDefinitions>

                        <!--Caption-->
                        <Border x:Name="TransitionsCaptureLine" Margin="0,8" VerticalAlignment="Center" BorderThickness="0,0,0,1" BorderBrush="White" 
                                Background="Transparent" HorizontalAlignment="Left" Width="350">
                            <TextBlock x:Name="TransitionsCapture" TextWrapping="Wrap" Text="Transitions" FontSize="18.667" VerticalAlignment="Bottom"/>
                        </Border>
                        <Grid Grid.Row="1">
                        	<Grid.ColumnDefinitions>
                        		<ColumnDefinition Width="Auto" />
                        		<ColumnDefinition/>
                        	</Grid.ColumnDefinitions>

                        	<!--Transitions List-->
                        	<ListBox x:Name="TransitionsList" Background="{x:Null}" 
                        		BorderBrush="{x:Null}" ItemContainerStyle="{DynamicResource ListBoxItemStyle}" ItemsSource="{Binding TransitionTypes}" 
                        		HorizontalAlignment="Left" Width="300" ItemTemplate="{DynamicResource TransitionsListDataTemplate}" 
                        		Style="{DynamicResource ListBoxStyle}" SelectedItem="{Binding SelectedType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <Controls:TransitionElement x:Name="TransitionBox" Grid.Column="1" Transition="{Binding SelectedTransition, Mode=OneWay}" Content="{Binding ContentSwitcher, Converter={StaticResource ContentSwicherConverter}, Mode=OneWay}" Margin="8,0"/>
                        </Grid>

                        
                    </Grid>

                    <!--Back Text-->
                    <TextBlock x:Name="ViewTabBackText" TextWrapping="Wrap" Text="View" FontSize="96" 
                               TextAlignment="Right" VerticalAlignment="Bottom" Foreground="#19FFFFFF" Margin="8,0,0,-22"/>

                </Grid>
            </TabItem>
            
            <!--Language Tab-->
            <TabItem Header="Language" Style="{DynamicResource TabItemStyle}" Height="40" Width="200" Margin="0" FontSize="21.333" Foreground="White">
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Offset="0"/>
                            <GradientStop Color="#11FFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <TextBlock Text="Language" FontSize="96" TextAlignment="Right" VerticalAlignment="Bottom" Foreground="#19FFFFFF" Margin="8,0,0,0"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</CommonControls:PageControl>
