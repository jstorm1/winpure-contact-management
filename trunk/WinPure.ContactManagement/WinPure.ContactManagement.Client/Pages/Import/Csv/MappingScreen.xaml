<UserControl x:Class="WinPure.ContactManagement.Client.Pages.Import.Csv.MappingScreen"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:CSV="clr-namespace:WinPure.ContactManagement.Client.ViewModels.Import.CSV;assembly=WinPure.ContactManagement.Client.ViewModels"
             mc:Ignorable="d"
                             d:DesignHeight="300"
                             d:DesignWidth="300">

  
    <Grid>
    	<DataGrid ItemsSource="{Binding Mapping}">
    		<DataGrid.Columns>
    			<DataGridTextColumn Header="CRM Field" Binding="{Binding CrmField}"/>
				<DataGridTemplateColumn Header="Your file field">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<ComboBox ItemsSource="{Binding FileFields}" SelectedItem="{Binding FileField, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>  	
		</DataGrid>
            
    </Grid>
</UserControl>
